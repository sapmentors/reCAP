<mvc:View controllerName="recap.App"
  xmlns="sap.m"
  xmlns:c="sap.suite.ui.commons"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.ui.webc.fiori"
  xmlns:fm="sap.ui.webc.main"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:unified="sap.ui.unified"
  width="100%">
  <App>

    <Page showHeader="false">
      <!-- <HBox alignItems="End"> -->
      <f:ShellBar primaryTitle="re>â‰¡CAP 2023"
        secondaryTitle="St. Leon-Rot, DE">
        <f:logo>
          <fm:Avatar shape="Square">
            <Image src="./img/recap-2023-logo-small.png" />
          </fm:Avatar>
        </f:logo>
      </f:ShellBar>

      <!-- <FormattedText htmlText="{/when}" class="copyt sapUiMediumMarginBottom">
          <layoutData>
            <FlexItemData growFactor="0" />
          </layoutData>
        </FormattedText> -->
      <!-- </HBox> -->
      <Panel headerText="ðŸŽŸï¸ Tickets!"
        expandable="true"
        expanded="true"
        width="auto"
        class="sapUiResponsiveMargin"
        visible="{path: '', formatter: '.isItTimeYet'}">
        <content>
          <FormattedText htmlText="{/tickets}"
            class="where" />
          <Text text="Yes, you can register for the triplet (Hackathon, UI5con, reCAP) or for any combination at above URL ðŸ˜„"
            class="t-small" />
          <Text text="If sold out, you'll be put on the waiting list. The next free spot will automatically be yours!"
            class="t-small" />


        </content>
      </Panel>
      <Panel expandable="true"
        headerText="July 5: Hackathon"
        width="auto"
        class="sapUiResponsiveMargin">
        <content>

          <c:Timeline content="{agenda>/rooms/1/sessions}"
            sortOldestFirst="true"
            textHeight="automatic">
            <c:TimelineItem title="{agenda>title}"
              text="{agenda>description}"
              dateTime="{agenda>startTime}">
            </c:TimelineItem>
          </c:Timeline>
          <!-- <c:Timeline content="{agenda>/rooms/2/sessions}" sortOldestFirst="true" textHeight="automatic">
          <c:TimelineItem title="{agenda>title}" text="{agenda>description}" dateTime="{agenda>startTime}">
          </c:TimelineItem>
        </c:Timeline> -->
        </content>
      </Panel>

      <Panel expandable="true"
        expanded="true"
        headerText="July 7: re>â‰¡CAP"
        width="auto"
        class="sapUiResponsiveMargin">
        <content>
          <PlanningCalendar startDate="{agenda>/startDate}"
            stickyHeader="true"
            rows="{agenda>/rooms}"
            appointmentSelect="onAppointmentSelect"
            viewKey="A">
            <views>
              <PlanningCalendarView key="A"
                appointmentHeight="Large"
                intervalType="Hour"
                intervalsS="2"
                intervalsM="3"
                intervalsL="3"
                showSubIntervals="false"></PlanningCalendarView>
            </views>
            <rows>
              <PlanningCalendarRow title="{agenda>name}"
                appointments="{path : 'agenda>sessions', templateShareable: false}">
                <appointments>
                  <unified:CalendarAppointment startDate="{agenda>startTime}"
                    endDate="{agenda>endTime}"
                    title="{agenda>title}"
                    text="{agenda>description}">
                  </unified:CalendarAppointment>
                </appointments>
              </PlanningCalendarRow>
            </rows>
          </PlanningCalendar>
        </content>
      </Panel>
      <VBox alignItems="Center"
        class="sapUiResponsiveContentPadding t1">
        <FormattedText htmlText="{/where}"
          class="where" />
      </VBox>
    </Page>
  </App>
</mvc:View>
