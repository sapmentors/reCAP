<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Table id="AgendaTable"
        alternateRowColors="true"
        fixedLayout="true"
        items="{/}">
        <columns>
            <Column demandPopin="true"
                minScreenWidth="Tablet"
                hAlign="Begin"
                width="10%" />
            <Column demandPopin="true"
                minScreenWidth="Tablet"
                hAlign="Begin"
                width="10%" />
            <Column demandPopin="true"
                minScreenWidth="Tablet" />
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <Title text="{startTime}" />


                    <Link href="{video}"
                        text="ðŸ“½ (rec)"
                        visible="{= ${video} ? true : false }" />

                    <VBox>
                        <Text text="{ 
                            path:'speakers',
                            formatter:'.daSpeakers'
                        }" />
                        <Panel headerText="{ path:'title', formatter:'.decode' }"
                            expandable="true"
                            expanded="false">
                            <content>
                                <Text text="{ path:'description', formatter:'.decode' }"
                                    class="sapUiTinyMarginBottom description" />
                                <HBox items="{ path:'speakers', templateShareable:true}">
                                    <HBox class="sapUiContentPadding"
                                        alignItems="Center">
                                        <VBox class="sapUiContentPadding">
                                            <Avatar src="https://recap.cfapps.eu10.hana.ondemand.com{= ${photoUrl} }"
                                                displaySize="M"
                                                showBorder="true" />
                                            <Text text="({firstName} {lastName})"
                                                class="smallItalic" />
                                            <Text text="ðŸ›  {company}"
                                                class="small"
                                                wrapping="false" />
                                            <Link text="{twitterHandle}"
                                                href="https://twitter.com/{twitterHandle}"
                                                class="small" />
                                            <Link text="ðŸ”— LinkedIn"
                                                href="{linkedInUrl}"
                                                class="small"
                                                visible="{= ${linkedInUrl} ? true : false }" />
                                        </VBox>
                                        <Text text="{ path:'bio', formatter:'.decode' }"
                                            class="sapUiResponsiveContentPadding bio" />
                                    </HBox>

                                </HBox>
                            </content>
                        </Panel>
                    </VBox>

                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>