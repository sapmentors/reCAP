<mvc:View controllerName="capcom.recap.App"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc">
  <App>
    <Page showHeader="false">
      <VBox alignItems="Center"
        height="100%">
        <Title level="H1"
          text="re>≡CAP hybrid"
          class="what" />
        <Text text="Jun 1: 14 - 19 CEST&#13;&#10;Jun 2: 09 - 13 CEST"
          class="when"
          renderWhitespace="true" />
        <Text text="for Speakers: 🎪 ROT03 + ROT24 (optional)&#13;&#10;for everyone: 🌍 online without registration at"
          class="where" />
        <Link text="https://broadcast.sap.com/go/reCAP2022"
          target="_blank"
          href="https://broadcast.sap.com/go/reCAP2022"
          class="where"  />
        <Text text="Block your calendar"
          class="where" />
        <HBox id="calendar">
          <VBox id="day1"
            alignItems="Center"
            justifyContent="Center"
            width="230px">
            <Link text="Day 1 (ics)"
              target="_blank"
              href="https://cap.cloud.sap/resources/events/reCAP_2022_day1.ics"
              class="where" />
            <Link text="Day 1 (msg)"
              target="_blank"
              href="https://cap.cloud.sap/resources/events/reCAP_2022_day1.msg"
              class="where" />
          </VBox>
          <VBox id="day2"
            alignItems="Center"
            justifyContent="Center"
            width="230px">
            <Link text="Day 2 (ics)"
              target="_blank"
              href="https://cap.cloud.sap/resources/events/reCAP_2022_day2.ics"
              class="where" />
            <Link text="Day 2 (msg)"
              target="_blank"
              href="https://cap.cloud.sap/resources/events/reCAP_2022_day2.msg"
              class="where" />
          </VBox>
        </HBox>

        <VBox width="95%">
          <Title level="H5"
            text="Wed, Jun 1" />
          <core:Fragment fragmentName="capcom.recap.Agenda"
            id="AgendaWednesdayFragment"
            type="XML"
            class="sapUiLargeMarginBottom" />
          <Title level="H1"
            text="Thu, Jun 2" />
          <core:Fragment fragmentName="capcom.recap.Agenda"
            id="AgendaThursdayFragment"
            type="XML"
            class="sapUiLargeMarginBottom" />
        </VBox>


        <VBox id="panelist">
          <Panel headerText="here's why"
            expandable="true"
            expanded="false"
            class="why">
            <FormattedText class="hereswhy"
              htmlText="{/hereswhy}" />
          </Panel>
        </VBox>
        <Text text="Platin Sponsor"
          class="sapUiMediumMarginTop why" />
        <Image src="img/Rizing_Logo_RGB.svg"
          width="200px"
          class="sapUiTinyMarginTop" />
        <Link text="rizing.com"
          target="_blank"
          href="https://rizing.com/" />
        <Text text="Gold Sponsors"
          class="sapUiMediumMarginTop why" />
        <HBox id="goldsponsors">
          <VBox id="paricon"
            alignItems="Center"
            justifyContent="Center"
            width="230px">
            <Image src="img/Paricon_Logo_Negativ_RGB.png"
              class="sapUiTinyMarginTop" />
            <Link text="paricon.de"
              target="_blank"
              href="https://www.paricon.de/" />
          </VBox>
          <VBox id="jssoft"
            alignItems="Center"
            justifyContent="Center"
            width="230px">
            <Image src="img/js-soft.png"
              class="sapUiTinyMarginTop" />
            <Link text="js-soft.com"
              target="_blank"
              href="https://www.js-soft.com/" />
          </VBox>
        </HBox>
        <Text text="Silver Sponsor"
          class="sapUiMediumMarginTop why" />
        <Image src="img/reply.png"
          width="200px"
          class="sapUiTinyMarginTop" />
        <Link text="reply.com"
          target="_blank"
          href="https://www.reply.com/" />
      </VBox>
    </Page>
  </App>
</mvc:View>
