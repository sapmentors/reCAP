<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">

    <l:HorizontalLayout>
        <l:Grid defaultSpan="XL5 L5 M5 S12">
            <GenericTile header="j+s-soft GmbH"
                subheader="https://www.js-soft.com"
                class="sapUiSmallMargin"
                press="onSponsorPress('https://www.js-soft.com')">
                <TileContent footer="j+s-soft GmbH">
                    <ImageContent src="js-soft.png" />
                </TileContent>
            </GenericTile>
            <GenericTile header="Reply"
                subheader="https://www.reply.com/de/"
                class="sapUiSmallMargin"
                press="onSponsorPress('https://www.reply.com/de/')">
                <TileContent footer="Reply">
                    <ImageContent src="reply.png" />
                </TileContent>
            </GenericTile>
        </l:Grid>
    </l:HorizontalLayout>
</core:FragmentDefinition>